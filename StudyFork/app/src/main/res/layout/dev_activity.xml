<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


        <variable
            name="activity"
            type="com.googry.studyfork.dev.DevActivity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:onClick='@{() -> activity.onStartActivityClick("MainActivity")}'
                android:text="MainActivity"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="match_parent"
                android:onClick='@{() -> activity.onStartActivityClick("ProfileActivity")}'
                android:text="ProfileActivity"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="match_parent"
                android:onClick='@{() -> activity.onStartActivityClick("MentorListActivity")}'
                android:text="MentorListActivity"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</layout>